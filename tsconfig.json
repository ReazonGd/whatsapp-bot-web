{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/types",]
    // "declarationMap": true,
    // "sourceMap": true
  },
  "include": ["src/**/*",],
  "exclude": ["node_modules", "dist"]
}